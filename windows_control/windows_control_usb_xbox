import usb.core
import usb.util
import sys
import libusb01
import libusb10
from usb.util import release_interface

# Attempts to use pre-found ids to capture the controller
dev = usb.core.find(idVendor=0x045e, idProduct=0x02d1) 
interface = 0
endpoint = dev[0][(0,0)][0]

dev.set_configuration(interface)

    
usb.util.claim_interface(dev, interface)
collected = 0
attempts = 50
try:
    data = dev.read(endpoint.bEndpointAddress,endpoint.wMaxPacketSize)
    collected += 1
    print data
except usb.core.USBError as e:
    data = None

dev = usb.core.find(idVendor=0x045e, idProduct=0x02d1), 
dev.attach_kernel_driver(interface)